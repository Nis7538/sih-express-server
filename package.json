{
    "name": "sih-express-server",
    "version": "1.0.0",
    "description": "SIH Node Express Server with Sequelize ORM support and Truffle for Smart Contract development.",
    "main": "index.js",
    "scripts": {
        "server": "nodemon index.js",
        "resync": "node ./app/resync.js default",
        "resync:force": "node ./app/resync.js force",
        "db:seed": "node ./app/seeders/index.js seed-all",
        "contract:migrate:all": "truffle compile && node ./app/contract.js deploy-diff && node ./app/contract.js load-deployed",
        "test:unit": "node ./test/index.js test-unit-single",
        "test:contract": "node ./test/index.js test-contract-single",
        "test:app": "node ./test/index.js test-app-single"
    },
    "keywords": [],
    "author": "Denish Sharma",
    "license": "ISC",
    "dependencies": {
        "@truffle/contract": "^4.5.17",
        "bcrypt": "^5.0.1",
        "body-parser": "^1.20.0",
        "cookie-parser": "^1.4.6",
        "cors": "^2.8.5",
        "crypto-js": "^4.1.1",
        "dotenv": "^16.0.1",
        "ethereumjs-tx": "^2.1.2",
        "express": "^4.18.1",
        "jsonwebtoken": "^8.5.1",
        "mysql2": "^2.3.3",
        "node-cron": "^3.0.1",
        "nodemon": "^2.0.19",
        "object-hash": "^3.0.0",
        "sequelize": "^6.21.3",
        "web3": "^1.7.4"
    },
    "nodemonConfig": {
        "verbose": true,
        "colours": true,
        "ignore": [
            ".git",
            "node_modules/**",
            "./app/contracts/**/*.js",
            "./app/contracts/index.js",
            "./app/contracts/build/*",
            "./test/*",
            "app/seeders/*.js"
        ]
    }
}
